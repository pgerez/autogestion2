{# see @SonataAdmin/CRUD/list__batch.html.twig for the current default template #}

{% extends get_admin_template('base_list_field', admin.code) %}

{% block field %}
    {% if admin.code == 'admin.estimulo' %}
        <input type="checkbox" name="idx[]" value="{{ admin.id(object) }}" {% if object.condicionParaDeshabilitar %}disabled{% endif %}/>
    {% else %}
        <input type="checkbox" name="idx[]" value="{{ admin.id(object) }}"/>
    {% endif %}

{% endblock %}