				<th width="10%"><b>Precio Unit.</b></th>
				<th><b>Total</b></th>
			</tr>
			
			{% for item in compra.insumos %}
				<tr>
					<td>{{ item.descripcion }}</td>
					<td>{{ item.codigo }}</td>
					<td>{{ item.cantidad }}</td>
					<td>{{ item.getPrecUnitario }}</td>
					<td>{{ item.total }}</td>
